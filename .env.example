# MyFinances Environment Configuration Template
# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Database Configuration (PostgreSQL)
# For local Docker: docker run --name postgres-myfinances -e POSTGRES_DB=myfinances -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=password -p 5432:5432 -d postgres:15
DATABASE_URL=jdbc:postgresql://localhost:5432/myfinances
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# Server Configuration
SERVER_PORT=8080

# Application Upload Directory
UPLOAD_DIR=./uploads

# Security Configuration (REQUIRED for production)
REMEMBER_ME_KEY=your_very_secure_random_key_here_min_32_chars
JWT_SECRET=your_jwt_secret_key_here_must_be_very_secure_min_512_bits

# JWT Token Expiration (in milliseconds)
JWT_EXPIRATION=86400000

# Logging Configuration
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN

# Database Configuration
DDL_AUTO=update
SHOW_SQL=true

# CORS Configuration (for future API usage)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Production-specific settings
# Only set these in production environment
# SSL_KEYSTORE_PATH=/path/to/keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password
# SSL_KEY_ALIAS=your_key_alias